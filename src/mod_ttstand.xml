<?xml version="1.0" encoding="utf-8"?>
<extension type="module" method="upgrade" client="site"  version="3.0">
  <name>TT Stand</name>
  <author>Gijs Lamon</author>
  <copyright>(C) 2022 Gileba</copyright>
  <license>GNU/GPL</license>
  <authorEmail>info@gileba.be</authorEmail>
  <authorUrl>www.gileba.be</authorUrl>
  <version>1.2.0</version>
  <creationDate>2023-09-27</creationDate>
  <description>
    This module shows tabletennis information from API-powered suppliers on your Joomla site.
  </description>
  <changelogurl>http://updates.gileba.be/changelogs/mod_ttstand.xml</changelogurl>
  <updateservers>
   <server type="extension" priority="1" name="TT Stand for TTapp">
      https://gileba.be/updates/mod_ttstand.xml
   </server>
  </updateservers>
  <dlid prefix="download_id=" />
  <files>
    <filename module="mod_ttstand">mod_ttstand.php</filename>
    <folder>css</folder>
    <folder>tmpl</folder>
    <folder>language</folder>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.mod_ttstand.ini</language>
    <language tag="nl-NL">nl-NL/nl-NL.mod_ttstand.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="ttapp_api" type="text" label="MOD_TTSTAND_API_LABEL" />
        <field name="ttapp_type" type="list" label="MOD_TTSTAND_TYPE_LABEL">
          <option value="poule">MOD_TTSTAND_POULE</option>
        </field>
        <field name="ttapp_poule" showon="ttapp_type:poule" type="number" label="MOD_TTSTAND_POULE_LABEL" />
        <field name="ttapp_col_pos" showon="ttapp_type:poule" type="radio" label="MOD_TTSTAND_COLUMN_POS_LABEL" class="btn-group btn-group-yesno" default="0">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="ttapp_col_name" showon="ttapp_type:poule" type="radio" label="MOD_TTSTAND_COLUMN_NAME_LABEL" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="ttapp_col_played" showon="ttapp_type:poule" type="radio" label="MOD_TTSTAND_COLUMN_PLAYED_LABEL" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="ttapp_col_points" showon="ttapp_type:poule" type="radio" label="MOD_TTSTAND_COLUMN_POINTS_LABEL" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="ttapp_col_rating" showon="ttapp_type:poule" type="radio" label="MOD_TTSTAND_COLUMN_RATING_LABEL" class="btn-group btn-group-yesno" default="0">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="ttapp_headers" showon="ttapp_type:poule" type="text" label="MOD_TTSTAND_HEADERS_LABEL" />
      </fieldset>
      <fieldset name="advanced">
        <field name="moduleclass_sfx" type="textarea" rows="2" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" />
      </fieldset>
    </fields>
  </config>
</extension>
